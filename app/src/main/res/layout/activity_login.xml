<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/new_login_gradient"
    tools:context="com.example.jameedean.e_ideas.LoginActivity"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/d16p">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="E-IDEAS"
            android:textColor="#ffff"
            android:textStyle="italic"
            android:textSize="50dp" />

        <ImageView
            android:src="@drawable/ic_idea"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:id="@+id/btnRegistration"
            android:onClick="btnRegistration_Click"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_signin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_margin="60dp"
            android:background="@null"
            android:text="Already Have Account?? Sign In Here!"
            android:onClick="btnSignIn_Click"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>

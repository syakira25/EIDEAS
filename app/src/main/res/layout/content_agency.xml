<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/d16p"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jameedean.e_ideas.AgencyActivity"
    tools:showIn="@layout/activtiy_agency"
    android:layout_marginStart="@dimen/standard_separator"
    android:layout_marginEnd="@dimen/standard_separator">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Agency" />

    <EditText
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:hint="Agency Logo URL" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:scrollbars="vertical"
        android:inputType="textMultiLine"
        android:hint="Email"
        android:gravity="top"
        android:layout_marginTop="@dimen/d16p"/>

</RelativeLayout>
